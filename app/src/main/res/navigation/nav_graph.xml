<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.proyecto.fragments.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.proyecto.fragments.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.proyecto.fragments.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_busquedaFragment"
            app:destination="@id/busquedaFragment" />
        <action
            android:id="@+id/action_homeFragment_to_agregarPublicacionFragment"
            app:destination="@id/agregarPublicacionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_commentsFragment"
            app:destination="@id/commentsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_perfilFragment"
            app:destination="@id/perfilFragment" />
    </fragment>
    <fragment
        android:id="@+id/busquedaFragment"
        android:name="com.example.proyecto.fragments.BusquedaFragment"
        android:label="BusquedaFragment" >
        <action
            android:id="@+id/action_busquedaFragment_to_commentsFragment"
            app:destination="@id/commentsFragment" />
    </fragment>
    <fragment
        android:id="@+id/agregarPublicacionFragment"
        android:name="com.example.proyecto.fragments.AgregarPublicacionFragment"
        android:label="AgregarPublicacionFragment" />
    <fragment
        android:id="@+id/editarPerfilFragment"
        android:name="com.example.proyecto.fragments.EditarPerfilFragment"
        android:label="EditarPerfilFragment" >
        <action
            android:id="@+id/action_editarPerfilFragment_to_perfilFragment"
            app:destination="@id/perfilFragment" />
    </fragment>
    <fragment
        android:id="@+id/commentsFragment"
        android:name="com.example.proyecto.fragments.CommentsFragment"
        android:label="CommentsFragment" />
    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.example.proyecto.fragments.PerfilFragment"
        android:label="PerfilFragment" >
        <action
            android:id="@+id/action_perfilFragment_to_editarPerfilFragment"
            app:destination="@id/editarPerfilFragment" />
        <action
            android:id="@+id/action_perfilFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_perfilFragment_to_commentsFragment"
            app:destination="@id/commentsFragment" />
        <action
            android:id="@+id/action_perfilFragment_to_agregarPublicacionFragment"
            app:destination="@id/agregarPublicacionFragment" />
        <action
            android:id="@+id/action_perfilFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_perfilFragment_to_editarPublicacionFragment"
            app:destination="@id/editarPublicacionFragment" />
        <action
            android:id="@+id/action_perfilFragment_to_busquedaFragment"
            app:destination="@id/busquedaFragment" />
        <action
            android:id="@+id/action_perfilFragment_to_editarBorradorFragment"
            app:destination="@id/editarBorradorFragment" />
    </fragment>
    <fragment
        android:id="@+id/editarPublicacionFragment"
        android:name="com.example.proyecto.fragments.EditarPublicacionFragment"
        android:label="EditarPublicacionFragment" >
        <action
            android:id="@+id/action_editarPublicacionFragment_to_perfilFragment"
            app:destination="@id/perfilFragment" />
    </fragment>
    <fragment
        android:id="@+id/editarBorradorFragment"
        android:name="com.example.proyecto.fragments.EditarBorradorFragment"
        android:label="EditarBorradorFragment" >
        <action
            android:id="@+id/action_editarBorradorFragment_to_perfilFragment"
            app:destination="@id/perfilFragment" />
    </fragment>
</navigation>