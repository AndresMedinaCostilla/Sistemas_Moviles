<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Sección de perfil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#202020"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgFotoPerfil"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/user"
                android:contentDescription="Foto de perfil" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/txtNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@usuario"
                    android:textColor="#8EE5E6"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/txtMiembroDesde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miembro desde 2024"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnEditarPerfil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar perfil" />

        </LinearLayout>

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CERRAR SESIÓN"
            android:textColor="#FFFFFF"
            android:background="#777"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Tabs de navegación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1A1A1A"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/btnPublicaciones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="16dp">

            <ImageView
                android:id="@+id/iconPublicaciones"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/window"
                android:tint="#8EE5E6" />

            <TextView
                android:id="@+id/textPublicaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publicaciones"
                android:textColor="#8EE5E6"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnFavoritos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="16dp">

            <ImageView
                android:id="@+id/iconFavoritos"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/star"
                android:tint="#AAAAAA" />

            <TextView
                android:id="@+id/textFavoritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favoritos"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnBorradores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="16dp">

            <ImageView
                android:id="@+id/iconBorradores"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/draft"
                android:tint="#AAAAAA" />

            <TextView
                android:id="@+id/textBorradores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borradores"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Título de sección -->
    <TextView
        android:id="@+id/tvTituloSeccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Publicaciones"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>