<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Círculo para foto de perfil -->
    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/user_foreground"
        android:background="#8EE5E6"
        android:contentDescription="Foto de perfil" />

    <!-- Texto principal -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicia sesión con tu cuenta\npara continuar"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <!-- Campo de correo -->
    <EditText
        android:id="@+id/txtCorreo"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="Correo electrónico"
        android:backgroundTint="#8EE5E6"
        android:textColor="#FFFFFF"
        android:textColorHint="#A9A9A9"
        android:inputType="textEmailAddress"
        android:drawablePadding="10dp"
        android:paddingStart="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext_style" />

    <!-- Campo de contraseña -->
    <EditText
        android:id="@+id/txtContrasena"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="Contraseña"
        android:backgroundTint="#8EE5E6"
        android:textColor="#FFFFFF"
        android:textColorHint="#A9A9A9"
        android:inputType="textPassword"
        android:drawablePadding="10dp"
        android:paddingStart="16dp"
        android:background="@drawable/edittext_style"
        android:layout_marginBottom="24dp" />

    <!-- Botón de iniciar sesión -->
    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Iniciar sesión"
        android:textColor="#000000"
        android:backgroundTint="#8EE5E6"
        android:background="@drawable/button_rounded"
        android:layout_marginBottom="16dp" />

    <!-- Enlace a registro -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No tienes cuenta? "
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txtRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regístrate aquí"
        android:textColor="#8EE5E6"
        android:textSize="14sp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="4dp" />

</LinearLayout>
